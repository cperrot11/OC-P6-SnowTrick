{% extends 'base.html.twig' %}

{% block title %}Enregistrement{% endblock %}

{% block body %}
    {{ parent() }}
    <h1 class="slogan">Inscription</h1>
    <img src="\images\unsplash.jpg" style="width: inherit">
    {# read and display just one flash message type #}
    {% for message in app.flashes('registration') %}
        <div class="alert alert-dismissible alert-danger">
            {{ message }}
        </div>
    {% endfor %}


    {{ form_start(registrationForm) }}

    <h1 class="h3 mb-3 font-weight-normal">Cr√©ez votre compte</h1>
        {{ form_row(registrationForm.username) }}
        {{ form_row(registrationForm.picture) }}
        {{ form_row(registrationForm.plainPassword) }}
        {{ form_row(registrationForm.email) }}

        <button class="action d-block m-auto">Enregistrement</button>
    {{ form_end(registrationForm) }}
    {#add margin for footer#}
    <h5 class="form-register"></h5>
{% endblock %}
